[Unit]
Description=Crver HTTP(s) Service
After=network-online.target
Wants=network-online.target

[Service]
User=root
Group=root
ExecStart=/usr/local/bin/crver
WorkingDirectory=/var/cwww
NoNewPrivileges=true
Restart=always
RestartSec=5

StandardOutput=journal
StandardError=journal

LimitNOFILE=524288
LimitNPROC=7450
LimitMEMLOCK=infinity

[Install]
WantedBy=multi-user.target
